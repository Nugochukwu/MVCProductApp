<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVCProductApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVCProductApp.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex">
            <!-- Sidebar -->
            <nav class="sidebar bg-dark text-white p-3" style="width: 220px; min-height: 100vh;">
                <h4 class="mb-4">MVCProductApp</h4>
                <ul class="nav flex-column">
                    
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Home" asp-action="Index"> Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Home" asp-action="Privacy"> Privacy</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Product" asp-action="Index"> Products</a>
                    </li>

                    <partial name="_LoginPartial"/>
                    
                </ul>
            </nav>

            <!-- Main Content -->
            <div class="flex-grow-1 d-flex flex-column">
                <header class="border-bottom p-2 bg-light">
                    <span>@ViewData["Title"]</span>
                </header>

                <main role="main" class="p-4 flex-grow-1">
                @RenderBody()
                </main>

                <footer class="border-top footer text-muted p-2 text-center">
                    &copy; 2025 - MVCProductApp - 
                    <a asp-controller="Home" asp-action="Privacy">Privacy</a>
                </footer>
            </div>
     </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
